#include <stdlib.h>
#include <stdio.h>
#include <stdbool.h>
#include <string.h>


bool check_valid(char string[6], char input);
char color[6]={"RBOYPG"};
bool fourColor = false; sixColor = false; eightColor = false;
bool game_over=false;
bool wait=true;
char input[50]={};
char answer[4]={'E', 'E', 'E', 'E'};
char code[4]={};
char marker[4]={'E', 'E', 'E', 'E'};
int game_round = 1;
int maxRounds;
volatile int pixel_buffer_start;
volatile int * pixel_ctrl_ptr = (int *)0xFF203020;
volatile int * PS2_ptr = (int *) 0xFF200100;  // PS/2 port address
volatile int * KEY_ptr = (int *) 0xFF20005C;  // KEY edgecapture address
volatile int * SW_ptr = (int *) 0xFF200040;   // SW address
int PS2_data, KEY_data, SW_data;
int RVALI;
int key_pressed, KEY_pressed, SW_pressed;

/* Draw utility functions */
//This function is used in other draw functions to plot individual pixels
void plot_pixel(const int x, const int y, const short int line_color);

//This function is used when switching between screens (tutorial -> game -> won/lost game screen)
void clear_screen();

/*Draw functions*/
//This function draws an empty game board
void drawGame(int maxRounds);

//This function updates the colors of the pins & markers based on the current round
void drawColumns(int round, int maxRounds);

//This function draws the tutorial screen. It will indicate to the user to enter the difficulty from the keyboard
//0 easy = 12 rounds, 1 medium = 9 rounds, 2 hard = 7 rounds, 3 extreme = 5 rounds
void drawTutorial();

//Win screen
void drawWinScreen();

//Lose screen
void drawLostScreen();

char parse_input(int input);

int main()
{
    /* Read location of the pixel buffer from the pixel buffer controller */
    pixel_buffer_start = *pixel_ctrl_ptr;
    
    drawTutorial();
    
	clear_screen();
    drawGame(maxRounds);
    
    //initiate random generator and generate code
    srand(time(0));
    for(int i = 0; i<4; i++){
        code[i] = color[rand()%6];
        printf("%c\t",code[i]);
    } 
	printf("\n");
    while(!game_over){
        //max number of rounds passed, game over
        if(game_round == maxRounds+1){
            game_over = true;
            printf("Game Over!\n");
            drawLostScreen();
			return 0;
        } 
        printf("Round %d:\n",game_round);
        enter_input:
		printf("AVAILABLE COLORS: %s\n", color);
		printf("Please input colors: \n");
		wait = true;
		while(wait){		
		KEY_data = *(KEY_ptr);
		KEY_pressed = KEY_data & 0xF;
		//player has done an input
		if(KEY_pressed != 0){
			switch(KEY_pressed){
				case 1:
					//take input
					PS2_data = *(PS2_ptr);
					key_pressed = PS2_data & 0xFF;
					RVALI = (PS2_data & 0xFFFF0000)/65536;
					//check if the input is valid
					if(RVALI!=3){
						printf("Invalid input\n");
						*(KEY_ptr)=KEY_pressed;
						continue;
					}else{
					    *(KEY_ptr)=KEY_pressed;
						answer[0]=parse_input(key_pressed);						
						for(int i=0;i<3;i++){
							PS2_data = *(PS2_ptr);
							key_pressed = PS2_data & 0xFF;
							answer[i+1]=parse_input(key_pressed);
						}
						wait = false;
					}
					break;
				case 2:
					//print tutorial
					drawTutorial();
					*(KEY_ptr)=KEY_pressed;
					break;
				
				case 3:
					//Reset game
					break;
			}
		 }
	}
		printf("YOUR INPUT:\n");
		for(int i = 0; i<4; i++){
		    bool valid=check_valid(color, answer[i]);
		    if(!valid){
		        strcpy(answer,"");
		        goto enter_input;
		    }
        	printf("%c\t", answer[i]);
		}
		printf("\n");
		//check the input and give hints of the answer
		char check[4]={};
		strcpy(check, code);
		strcpy(marker, "");
		for(int i = 0; i<4; i++){
		    if(answer[i]==check[i]){
		        marker[i]='R';
		        check[i]='0';
		        answer[i]='0';
		    }
		}
		for(int i = 0; i<4; i++){
        	if(check[i] != '0'){
        	    for(int j = 0;j<4;j++){
        	        if(answer[j]!='0'){
        	            if(check[i]==answer[j]){
        	                marker[i]='W';
        	                break;
        	            }else{
        	                marker[i]='E';
        	            }
        	        }
        	    }
        	}
		}
		//display the results
		printf("Result:\n");
		for(int i = 0; i<4; i++){
        	printf("%c\t", marker[i]);
		}
		printf("\n");
		//if all hints are red, game is won
		char correct[4];
		strcpy(correct, "RRRR");
		if(strcmp(marker,correct)==0){
		    game_over=true;
		    printf("YOU WIN");
		    drawWinScreen();
		}
        game_round++;
    }
    return 0;
}

//check if the input color is valid
bool check_valid(char string[6], char input){
    char *check_input;
    check_input=strchr(string,input);
	if(check_input==NULL){
	    printf("Invalid color.\n");
	    return false;
	}else{
	    return true;
	}
}

void plot_pixel(const int x, const int y, const short int line_color)
{
    *(short int *)(pixel_buffer_start + (y << 10) + (x << 1)) = line_color;
}

void clear_screen()
{
    int x = 0, y = 0;

    for (x = 0; x < 320; ++x)
    {
        for (y = 0; y < 240; ++y)
        {
            plot_pixel(x, y, 0x0000);
        }
    }
}

void drawTutorial(){
    //Draw tutorial screen
    re_enter:
    printf("Enter difficulty: 0 = easy, 1 = medium, 2 = hard, 3 = extreme\n");
	SW_data = *(SW_ptr);
	SW_pressed = SW_data & 0xF;
	
	//printf("Switch value: %d", SW_pressed);
	if (game_round==1){
		switch(SW_pressed){
		    case 0:
			maxRounds = 10;
		    fourColor = true;
			break;
			
		    case 1:
			maxRounds = 10;
			sixColor = true;
			break;
			
		    case 2:
			maxRounds = 8;
			sixColor = true;
			break;
			
		    case 3:
			maxRounds = 8;
			eightColor = true;
			break;
			
		    default:
			printf("Invalid input: %d\n", SW_pressed);
			goto re_enter;
		}
	//If we're midgame, tutorial will pop up just for instructions but won't prompt for difficulty
	} else {
	    printf("Please click switch 0 to continue");
	    while (SW_pressed!=0){
	        ; //Remain in while loop until the user presses SW 0 and progresses the game
	    }
	}
}

void drawWinScreen(){
    //Should draw "You win"
}

void drawLostScreen(){
    //Should draw "You lose"
}

void drawGame(int maxRounds){
    //Based on the maxRounds, draws an appropriate amount of columns to be filled
	
	for (int i = 1; i<=maxRounds; i++){
		drawColumns(i, maxRounds);
	}
	
}

void drawColumns(int round, int maxRounds){
	
	int leftXBuffer = 10; //How far off the left side of the screen the first circle is
	int bottomYBuffer = 10;
	int topYBuffer = 40;
	int circleDiameter = 26;
	int xSeperator=(320-(leftXBuffer+circleDiameter*maxRounds))/maxRounds;
	int ySeperator= (240-(bottomYBuffer+circleDiameter*6+topYBuffer))/5;
	
	for (int x = 0; x<320; x++){
		for(int y = 0; y<240; y++){
			
			//Drawing the lower circle based on color (circle gets shifted to the right by the round)
			if(x+(round-1)*xSeperator < 320){
				switch(answer[0]){
					case 'R':
						//plot_pixel(x+(round-1)*xSeperator, y, Red[y][x]);
						break;

					case 'B':
						//plot_pixel(x+(round-1)*xSeperator, y, Blue[y][x]);
						break;

					case 'O':
						//plot_pixel(x+(round-1)*xSeperator, y, Orange[y][x]);
						break;

					case 'Y':
						//plot_pixel(x+(round-1)*xSeperator, y, Yellow[y][x]);
						break;

					case 'P':
						//plot_pixel(x+(round-1)*xSeperator, y, Purple[y][x]);
						break;

					case 'G':
						//plot_pixel(x+(round-1)*xSeperator, y, Green[y][x]);
						break;
				}
			}
			
			//Drawing the lower middle circle (circle gets shifted up once & to the right by the round)
			if((x+(round-1)*xSeperator < 320)&&(y-ySeperator>0)){
				switch(answer[1]){
					case 'R':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator, Red[y][x]);
						break;

					case 'B':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator, Blue[y][x]);
						break;

					case 'O':
						//plot_pixel(x+(round-1)*xSeperator, y+ySeperator, Orange[y][x]);
						break;

					case 'Y':
						//plot_pixel(x+(round-1)*xSeperator, y+ySeperator, Yellow[y][x]);
						break;

					case 'P':
						//plot_pixel(x+(round-1)*xSeperator, y+ySeperator, Purple[y][x]);
						break;

					case 'G':
						//plot_pixel(x+(round-1)*xSeperator, y+ySeperator, Green[y][x]);
						break;
					
					case 'E':
						//plot_pixel(x+(round-1)*xSeperator, y+ySeperator, Empty[y][x]);
						break;
				}
			}
			
			//Drawing the upper middle circle (circle gets shifted up twice & to the right by the round)
			if((x+(round-1)*xSeperator < 320)&&(y-ySeperator*2>0)){
				switch(answer[2]){
					case 'R':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*2, Red[y][x]);
						break;

					case 'B':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*2, Blue[y][x]);
						break;

					case 'O':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*2, Orange[y][x]);
						break;

					case 'Y':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*2, Yellow[y][x]);
						break;

					case 'P':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*2, Purple[y][x]);
						break;

					case 'G':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*2, Green[y][x]);
						break;
					
					case 'E':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*2, Green[y][x]);
						break;
				}
			}
			
			//Drawing the top circle
			if((x+(round-1)*xSeperator < 320)&&(y-ySeperator*3>0)){
				switch(answer[3]){
					case 'R':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*3, Red[y][x]);
						break;

					case 'B':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*3, Blue[y][x]);
						break;

					case 'O':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*3, Orange[y][x]);
						break;

					case 'Y':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*3, Yellow[y][x]);
						break;

					case 'P':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*3, Purple[y][x]);
						break;

					case 'G':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*3, Green[y][x]);
						break;

					case 'E':
						//plot_pixel(x+(round-1)*xSeperator, y-ySeperator*3, Green[y][x];
						break;
				}
			}
		
		}
	}
	
}

char parse_input(int input){
    switch(input){
        case 50:
         return 'B';
        case 52:
         return 'G';
        case 68:
         return 'O';
        case 77:
         return 'P';
        case 45:
         return 'R';
        case 53:
         return 'Y';
        default:
         return 'Z';
    }
}
