char parse_input(int input){
    switch(input){
        case 50:
         return 'B';
        case 52:
         return 'G';
        case 68:
         return 'O';
        case 77:
         return 'P';
        case 45:
         return 'R';
        case 53:
         return 'Y';
        default:
         return 'Z';
    }
}
